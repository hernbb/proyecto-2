{{#each user.favorites}}
<div class="card">
  <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
    <img src={{iconUrls}} alt={{name}} class="img-fluid"/>
    <a href="#!">
      <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
    </a>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    
    <form action = "/delete-favorite" method="POST">
    <input type="hidden" name="id" value={{_id}}>
    <button type="submit" class="btn btn-primary">borrar favorito</button>
    </form>

    <form action="/add-to-deck" method="POST">
    <input  name="name" value={{name}}>
    <input  name="apiId" value={{id}}>
    <input  name="maxLevel" value={{maxLevel}}>
    <input  name="iconUrls" value={{iconUrls}}>
    <button type="submit" class="btn btn-primary">Add to deck</button>
    </form>
  </div>
</div>
{{/each}}